<div class="container top-margin full-height">
	<div class="circular">
	</div>

	<div class= "container thin-border-box top-margin div-width">
		<table style= "width:100%">
			<tr>
				<td><strong>Full Name:</strong></td>
				<td><%=@user.first_name%> <%=@user.last_name%></td>
			</tr>
			<tr>
				<td><strong>Email:</td>
				<td><%=@user.email%></td>
			</tr>
			<tr>
				<td><strong>Gender:</strong></td>
				<%if @user.gender == "0"%>
					<%gender = "Female"%>
				<%elsif @user.gender == "1"%>
					<%gender = "Male"%>
				<%else%>
					<%gender = "nil"%>
				<%end%>
				<td><%=gender%></td>
			</tr>
			<tr>
				<td><strong>Pok√©coins:</strong></td>
				<td><%=image_tag("/pokecoin.png",height:"35em")%> <%=@user.coins%></td>
			</tr>
		</table>
	</div>

</div>