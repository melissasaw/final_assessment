<div class="container full-height">

	<div class= "top-margin">
		<h2>Hello <%=current_user.first_name%> Ketchum!</h2>
		<h3>Your Pok√©dex</h3>
	</div>



	<div class= "card-deck d-flex top-margin">
		<%@pokemon.each do |p|%>
			 <div class="d-inline-block">
			 	 <div class="card border-dark mb-4 mr-2" style="width: 13rem; text-align:center; background:rgba(9, 37,84,0.2)">
	                    <div class="card-body">
							<h5 class="card-title"><%=p.national_id%></h5>
							<h5 class="card-title"><%=p.name.upcase%></h5>
							<h5 class="card-title"><%=image_tag("#{p.image_url}", height: '150em')%></h5>
							<h5 class="card-title"><%=link_to 'View', pokemon_path(p)%></h5>
			
	                    </div>
	            </div>
	        </div>
		<% end %>
	</div>
	
	<div class = "pokemon-gif">
	</div>


</div>
