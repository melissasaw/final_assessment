<div class="container">
	<div class="top-margin">
		<h4>Here's what we found..</h4>
	</div>


	<div class= "card-deck d-flex top-margin">
		<%@pokemon.each do |p|%>
		 <div class="d-inline-block">
		 	 <div class="card border-dark mb-4 mr-2" style="width: 13rem; text-align:left">
                    <div class="card-body">
						<h5 class="card-title">Owner: <%=p.user.first_name%></h5>
						<h5 class="card-title"><%=p.name.upcase%></h5>
						<h5 class="card-title"><%=image_tag("#{p.image_url}", height: '150em')%></h5>
						<h5 class="card-title"><%=link_to 'View', pokemon_path(p)%></h5>
		
                    </div>
                </div>
            </div>
		<% end %>
	</div>


</div>